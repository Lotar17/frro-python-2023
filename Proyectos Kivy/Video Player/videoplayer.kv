<VideoItem@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 100

    Image:
        texture: self.video.thumb.texture

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: f"Nombre: {self.video.nombre}"
        Label:
            text: f"Descripción: {self.video.descripcion}"
        Label:
            text: f"Propietario: {self.video.propietario}"

<VideoList@RecycleView>:
    viewclass: 'VideoItem'
    bar_width: '10dp'
    effect_cls: 'ScrollEffect'

    RecycleBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

<ButtonCustom@Button>:
    text: "Botón con Imagen"
    size_hint: None, None
    size: 200, 200
    padding: 10
    Image:
        source: 'path/to/image.png'
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
    Label:
        text: "Texto del Botón"
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


ScreenManager:
    Screen:
        name: "Menu"
        BoxLayout:
            padding: 20
            orientation: "vertical"
            GridLayout:
                id: lista
                size_hint_y: 0.9
                cols: 4
            GridLayout:
                size_hint_y: 0.1
                rows: 1
                cols: 2
                Button:
                    text: "Cargar Video"
                    on_press:
                        root.current = "Alta"
                Button:
                    text: "Salir"
                    on_press:
                        root.current = "player"
                        salir.state = "play"


    Screen:
        name: "Alta"
        GridLayout:
            cols: 2
            rows: 1
            BoxLayout:
                orientation: "vertical"
                padding: 60
                Label:
                    text: "Nombre"
                    text_size: self.size
                    halign: "left"
                    valign: "middle"
                TextInput:

                Label:
                    text: "Descripcion"
                    text_size: self.size
                    halign: "left"
                    valign: "middle"
                TextInput
                Label:
                    text: "Propietario"
                    text_size: self.size
                    halign: "left"
                    valign: "middle"
                TextInput:
                    multiline: False
                Label:
                    text: "Ruta"
                    text_size: self.size
                    halign: "left"
                    valign: "middle"
                TextInput:
                    id:route
                    multiline: False
                    valign: ""
                Button:
                    text: "Seleccione un archivo"
                    on_press:
                        root.current = "chooser"
            BoxLayout:
                orientation: "vertical"
                Label
                Button:

    Screen:
        name: "chooser"
        FileChooserListView:
            id: filechooser
            path: app.defaultPath()
            filters: ['*.mp4','*.mkv']
            on_selection:
                route.text = self.selection and self.selection[0] or ''
                root.current = "Alta"

    Screen:
        name: "player"
        BoxLayout:
            orientation: "vertical"
            VideoPlayer:
                id: salir
                size_hint_y: 0.9
                source: "Videos TPI/rick-astley.mp4"
                options: {"eos" : "loop"}
                allow_stretch: True
            Button:
                size_hint_y: 0.1
                text: "Volver"
                on_press:
                    root.current = "Menu"
                    salir.state = "stop"
    Screen:
        name: "lista de videos"
        BoxLayout:
            id: lista
            VideoList:
                id: video_list
        BoxLayout:
            id: botones
            Button:
                size_hint_y: 0.1
                text: "Volver"
                on_press:
                    root.current = "Menu"