GridLayout:
    rows: 3
    cols: 1
    padding: 20

    GridLayout:
        rows: 4
        padding: 10
        cols: 2
        size_hint: 1, 0.7

        Label:
            id: lbl_nombre
            font_size: 20
            color : 1, 1, 1, 1
            text: "Nombre"
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.3, None
            height: "60dp"



        TextInput:
            id: txt_nombre
            multiline: False
            text_size: self.size
            padding: 10
            size_hint: 0.3, None
            height: "60dp"


        Label:
            id: lbl_apellido
            font_size: 20
            color : 1, 1, 1, 1
            text: "Apellido"
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.3, None
            height: "60dp"

        TextInput:
            id: txt_apellido
            multiline: False
            text_size: self.size
            padding: 10
            valign: "middle"
            size_hint: 0.3, None
            height: "60dp"


        Label:
            id: lbl_mail
            font_size: 20
            color : 1, 1, 1, 1
            text: "Dirección de correo electrónico"
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.3, None
            height: "60dp"


        TextInput:
            id: txt_mail
            multiline: False
            text_size: self.size
            padding: 10
            valign: "middle"
            size_hint: 0.3, None
            height: "60dp"

        Label:
            id: lbl_contrasena
            font_size: 20
            color : 1, 1, 1, 1
            text: "Contraseña"
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.3, None
            height: "60dp"

        TextInput:
            id: txt_contrasena
            multiline: False
            text_size: self.size
            padding: 10
            valign: "middle"
            size_hint: 0.3, None
            height: "60dp"



    ProgressBar:
        id: pgb_formulario
        max: 4
        value: 0
        col_span: 2
        size_hint: 0.3, None
        height: "60dp"

    Button:
        id: btn_enviar
        text: "ENVIAR"
        col_span: 2
        size_hint: 0.3, None
        height: "60dp"


