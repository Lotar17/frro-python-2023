GridLayout:
    rows: 3
    padding:10
    spacing: 10

    Label:
        id: pantalla
        text: ""


    GridLayout:
        rows: 5
        cols: 4

        Button:
            text: "1"
            on_press: muestranumero(pantalla.text,self.text)
            pantalla.text += self.text
        Button:
            text: "2"
            on_press:pantalla.text += self.text
        Button:
            text: "3"
            on_press:pantalla.text += self.text
        Button:
            text: "+"
            on_press:pantalla.text += self.text
        Button:
            text: "4"
            on_press:pantalla.text += self.text
        Button:
            text: "5"
            on_press:pantalla.text += self.text
        Button:
            text: "6"
            on_press:pantalla.text += self.text
        Button:
            text: "-"
            on_press:pantalla.text += self.text
        Button:
            text: "7"
            on_press:pantalla.text += self.text
        Button:
            text: "8"
            on_press:pantalla.text += self.text
        Button:
            text: "9"
            on_press:pantalla.text += self.text
        Button:
            text: "x"
            on_press:pantalla.text += "*"
        Button:
            text: "0"
            on_press:pantalla.text += self.text
        Button:
            text: "."
            on_press:pantalla.text += self.text
        Button:
            text: "="
            on_press: pantalla.text = str(eval(pantalla.text))
        Button:
            text: "/"
            on_press:pantalla.text += self.text
        Button:
            text: "BORRAR"
            on_press:pantalla.text = "0"


