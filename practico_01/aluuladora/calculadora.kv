<ButtonCustom@Button>:
    background_color: 0.2, 0.2, 0.2, 1  # Color de fondo en formato RGBA
    color: 1, 1, 1, 1  # Color del texto en formato RGBA
    font_size: 20  # Tama√±o de la fuente
    font_name: 'Arial'

GridLayout:
    rows: 3
    padding: 20
    spacing: 20

    Label:
        id: pantalla
        font_size: 30
        font_name: 'Calculator'
        color: 0, 1, 0, 1
        text: "0"


    GridLayout:
        rows: 5
        cols: 4
        spacing: 5

        ButtonCustom:
            text: "1"
            style: "ButtonStyle"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "2"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "3"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "+"
            on_press: app.muestra_operador(pantalla,self)

        ButtonCustom:
            text: "4"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "5"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "6"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "-"
            on_press: app.muestra_operador(pantalla,self)

        ButtonCustom:
            text: "7"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "8"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "9"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "*"
            on_press: app.muestra_operador(pantalla,self)

        ButtonCustom:
            text: "0"
            on_press: app.muestra_numero(pantalla,self)
        ButtonCustom:
            text: "."
            on_press: app.muestra_operador(pantalla,self)
        ButtonCustom:
            text: "="
            on_press: app.mostrar_resultado(pantalla)
        ButtonCustom:
            text: "/"
            on_press: app.muestra_operador(pantalla,self)

        ButtonCustom:
            text: "CE"
            on_press: pantalla.text="0"
        ButtonCustom:
            text: "DELNUM"
            on_press: app.borra_numero(pantalla)
        ButtonCustom:
            text: "DEL"
            on_press: pantalla.text = pantalla.text[:len(pantalla.text)-1]